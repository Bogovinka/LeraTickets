<Window x:Class="TicketBuy.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketBuy"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center">
            <Label x:Name="loginName" Margin = "10,0,0,0"></Label>
            <Button x:Name="Выход" Margin = "10,0,0,0" Click="Выход_Click">Выход</Button>
        </TextBlock>
        <Button x:Name="add" Visibility="Hidden" HorizontalAlignment="Right" Click="add_Click">Добавить концерт</Button>
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="sP">
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
