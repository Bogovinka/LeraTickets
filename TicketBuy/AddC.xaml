<Window x:Class="TicketBuy.AddC"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketBuy"
        mc:Ignorable="d"
        Title="Новый концерт" WindowStartupLocation="CenterScreen" Height="450" Width="500">
    <StackPanel>
        <TextBox x:Name="Name" Margin="0,20,0,0" HorizontalAlignment="Center" materialDesign:HintAssist.Hint="Название концерта" Width="300"></TextBox>
        <TextBox x:Name="Image" Margin="0,20,0,0" HorizontalAlignment="Center" materialDesign:HintAssist.Hint="Картинка концерта(1,2,3,4)" Width="300"></TextBox>
        <TextBox x:Name="Size" Margin="0,20,0,0" HorizontalAlignment="Center" materialDesign:HintAssist.Hint="Количество мест" Width="300"></TextBox>
        <TextBox x:Name="Note" Margin="0,20,0,0" HorizontalAlignment="Center" materialDesign:HintAssist.Hint="Описание концерта(255 символов)" Width="300"></TextBox>
        <Button x:Name="add" Click="add_Click" Margin="0,50,0,0" HorizontalAlignment="Center">Добавить новый концерт</Button>
        <Button x:Name="exit" Click="exit_Click" Margin="0,50,0,0" HorizontalAlignment="Center">Выход</Button>
    </StackPanel>
    
</Window>
